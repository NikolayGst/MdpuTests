<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">


  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="niko.ru.mdputests.ResultTestFragment">

    <ImageView
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:src="@drawable/bg"
      android:scaleType="centerCrop"
      android:layout_height="150dp" />

    <ImageView
      android:id="@+id/imageSuccess"
      android:layout_marginTop="75dp"
      android:layout_width="match_parent"
      android:src="@drawable/success"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/descSuccess"
      android:layout_below="@id/imageSuccess"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center_horizontal"
      android:layout_marginTop="8dp"
      android:text="Вы успешно прошли тест!!!"
      android:textColor="@color/colorSuccess"
      android:textSize="25sp" />

    <LinearLayout
      android:id="@+id/lrResultPoint"
      android:layout_below="@id/descSuccess"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:gravity="center"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/yourResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ваш результат:"
        android:textColor="@color/teal"
        android:textSize="25sp" />
      <TextView
        android:id="@+id/txtCountPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/teal"
        android:textSize="25sp" />
    </LinearLayout>

    <TextView
      android:layout_below="@id/lrResultPoint"
      android:id="@+id/txtResultText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="16dp"
      android:gravity="center_horizontal"
     android:textColor="@android:color/black"
      android:textSize="13sp" />

  </RelativeLayout>
</android.support.v4.widget.NestedScrollView>